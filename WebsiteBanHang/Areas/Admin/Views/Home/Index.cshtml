@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard - Banh Cute Admin";
}

<style>
    .stats-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        transition: transform 0.3s;
    }

    .stats-card:hover {
        transform: translateY(-5px);
    }

    .stats-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .stats-number {
        font-size: 28px;
        font-weight: 700;
        color: #2c3e50;
        margin: 10px 0;
    }

    .stats-label {
        color: #6c757d;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .recent-products {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        padding: 20px;
        height: 400px;
        display: flex;
        flex-direction: column;
    }

    .chart-wrapper {
        flex: 1;
        position: relative;
        min-height: 300px;
    }

    .table th {
        font-weight: 600;
        color: #2c3e50;
    }

    .table td {
        vertical-align: middle;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.3s;
    }

    .dashboard-container {
        padding: 0 !important;
        margin: 0 !important;
        width: 100%;
    }

    .stats-row {
        margin: 0 0 24px 0;
        padding: 0 20px;
    }

    .content-row {
        margin: 0;
        padding: 0 20px;
    }

    .stats-card {
        height: 100%;
        margin-bottom: 0;
    }

    .products-table {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        height: 100%;
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        padding: 20px;
        height: 100%;
        min-height: 400px;
    }

    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }

    .product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid #eee;
    }

    .no-image {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #adb5bd;
        font-size: 24px;
    }

    .product-info h6 {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .badge {
        padding: 0.5em 0.8em;
        font-weight: 500;
    }

    .table-light {
        background-color: #f8f9fa;
    }

    .table th {
        font-size: 0.85rem;
        text-transform: uppercase;
        font-weight: 600;
        color: #6c757d;
    }

    .action-btn:hover {
        transform: translateY(-2px);
    }

    .products-table {
        border-radius: 15px;
        overflow: hidden;
    }

    .badge {
        transition: all 0.3s;
    }

    .badge:hover {
        transform: scale(1.1);
    }

    .badge.bg-success {
        background-color: #28a745 !important;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
        color: #000;
    }

    .badge.bg-danger {
        background-color: #dc3545 !important;
    }

    .table tbody tr {
        transition: all 0.3s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style>

<div class="dashboard-container">
    <!-- Thống kê -->
    <div class="row stats-row">
        <!-- Sản phẩm -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="stats-label">Sản phẩm</div>
                        <div class="stats-number">@Model.TotalProducts</div>
                    </div>
                    <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
                <a asp-controller="Product" asp-action="Index" class="text-primary text-decoration-none">
                    Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Danh mục -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="stats-label">Danh mục</div>
                        <div class="stats-number">@Model.TotalCategories</div>
                    </div>
                    <div class="stats-icon bg-success bg-opacity-10 text-success">
                        <i class="fas fa-list"></i>
                    </div>
                </div>
                <a asp-controller="Category" asp-action="Index" class="text-success text-decoration-none">
                    Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Đơn hàng -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="stats-label">Đơn hàng</div>
                        <div class="stats-number">@Model.TotalOrders</div>
                    </div>
                    <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                </div>
                <a asp-controller="Order" asp-action="Index" class="text-warning text-decoration-none">
                    Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Người dùng -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card p-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="stats-label">Người dùng</div>
                        <div class="stats-number">@Model.TotalUsers</div>
                    </div>
                    <div class="stats-icon bg-danger bg-opacity-10 text-danger">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <a asp-controller="User" asp-action="Index" class="text-danger text-decoration-none">
                    Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <div class="row content-row">
        <!-- Bảng sản phẩm mới -->
        <div class="col-lg-8 mb-4">
            <div class="products-table">
                <div class="p-4 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="m-0 fw-bold">
                        <i class="fas fa-box-open me-2"></i>
                        Sản phẩm mới nhất
                    </h5>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Thêm sản phẩm
                    </a>
                </div>
                <div class="p-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 300px;">Sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Giá</th>
                                    <th>Kho</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.RecentProducts)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="product-image me-3">
                                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                    {
                                                        <img src="@product.ImageUrl" class="product-img" alt="@product.Name">
                                                    }
                                                    else
                                                    {
                                                        <div class="no-image">
                                                            <i class="fas fa-image"></i>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="product-info">
                                                    <h6 class="mb-0">@product.Name</h6>
                                                    <small class="text-muted">ID: #@product.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info bg-opacity-10 text-info">
                                                <i class="fas fa-tag me-1"></i>@product.Category?.Name
                                            </span>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-primary">@product.Price.ToString("N0")₫</span>
                                        </td>
                                        <td>
                                            @if (product.Quantity > 10)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>@product.Quantity
                                                </span>
                                            }
                                            else if (product.Quantity > 0)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>@product.Quantity
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times me-1"></i>Hết hàng
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" 
                                                   class="btn btn-sm btn-outline-primary action-btn" 
                                                   data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" 
                                                   class="btn btn-sm btn-outline-info action-btn"
                                                   data-bs-toggle="tooltip" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Biểu đồ -->
        <div class="col-lg-4 mb-4">
            <div class="chart-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">Thống kê</h5>
                    <select class="form-select form-select-sm" style="width: auto;" id="chartSelector">
                        <option value="category">Phân bố danh mục</option>
                        <option value="orders">Đơn hàng theo trạng thái</option>
                        <option value="revenue">Doanh thu 7 ngày qua</option>
                        <option value="products">Top sản phẩm bán chạy</option>
                    </select>
                </div>
                <div class="chart-wrapper">
                    <canvas id="mainChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let currentChart = null;

        // Dữ liệu cho biểu đồ
        const chartData = {
            category: {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.CategoryStats.Select(x => $"'{x.CategoryName}'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.CategoryStats.Select(x => x.ProductCount))],
                        backgroundColor: [
                            'rgba(78, 115, 223, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(54, 185, 204, 0.8)',
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        title: {
                            display: true,
                            text: 'Phân bố sản phẩm theo danh mục'
                        }
                    },
                    cutout: '70%'
                }
            },
            orders: {
                type: 'pie',
                data: {
                    labels: ['Chờ xác nhận', 'Đã xác nhận', 'Đã hủy'],
                    datasets: [{
                        data: [@Model.PendingOrders, @Model.ConfirmedOrders, @Model.CancelledOrders],
                        backgroundColor: [
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        title: {
                            display: true,
                            text: 'Trạng thái đơn hàng'
                        }
                    }
                }
            },
            revenue: {
                type: 'line',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.RevenueData.Select(x => $"'{x.Date:dd/MM}'")))],
                    datasets: [{
                        label: 'Doanh thu',
                        data: [@string.Join(",", Model.RevenueData.Select(x => x.Amount))],
                        borderColor: 'rgba(78, 115, 223, 1)',
                        tension: 0.4,
                        fill: true,
                        backgroundColor: 'rgba(78, 115, 223, 0.1)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Doanh thu 7 ngày gần đây'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString('vi-VN') + 'đ';
                                }
                            }
                        }
                    }
                }
            },
            products: {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.TopProducts.Select(x => $"'{x.Name}'")))],
                    datasets: [{
                        label: 'Số lượng đã bán',
                        data: [@string.Join(",", Model.TopProducts.Select(x => x.SoldQuantity))],
                        backgroundColor: 'rgba(54, 185, 204, 0.8)',
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Top sản phẩm bán chạy'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            }
        };

        // Hàm vẽ biểu đồ
        function drawChart(chartType) {
            const ctx = document.getElementById('mainChart').getContext('2d');
            
            if (currentChart) {
                currentChart.destroy();
            }

            currentChart = new Chart(ctx, chartData[chartType]);
        }

        // Xử lý sự kiện thay đổi loại biểu đồ
        document.getElementById('chartSelector').addEventListener('change', function(e) {
            drawChart(e.target.value);
        });

        // Vẽ biểu đồ mặc định
        drawChart('category');

        // Khởi tạo tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}
