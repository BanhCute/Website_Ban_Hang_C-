@{
    ViewData["Title"] = "Dashboard - Banh Cute Admin";
}

<div class="container-fluid px-4 py-4">
    <!-- Thống kê tổng quan -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4 dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">@ViewBag.ProductCount</h3>
                            <div class="small">Tổng sản phẩm</div>
                        </div>
                        <div class="icon-circle bg-primary-light">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Product" asp-action="Index">Chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4 dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">@ViewBag.CategoryCount</h3>
                            <div class="small">Danh mục</div>
                        </div>
                        <div class="icon-circle bg-success-light">
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4 dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">@ViewBag.OrderCount</h3>
                            <div class="small">Đơn hàng</div>
                        </div>
                        <div class="icon-circle bg-warning-light">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4 dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">@ViewBag.UserCount</h3>
                            <div class="small">Người dùng</div>
                        </div>
                        <div class="icon-circle bg-danger-light">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#">Chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ thống kê -->
    <div class="row mt-4">
        <div class="col-xl-8">
            <div class="card mb-4 dashboard-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Sản phẩm mới nhất</h6>
                            <p class="small text-muted mb-0">Cập nhật lúc @DateTime.Now.ToString("HH:mm")</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Giá</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in ViewBag.LatestProducts)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Category.Name</td>
                                        <td>@product.Price.ToString("N0") đ</td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4 dashboard-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Phân bố danh mục</h6>
                            <p class="small text-muted mb-0">Theo số lượng sản phẩm</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,.08);
        transition: transform 0.2s;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
    }

    .icon-circle {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.8;
    }

    .bg-primary-light { background: rgba(255,255,255,0.2); }
    .bg-success-light { background: rgba(255,255,255,0.2); }
    .bg-warning-light { background: rgba(255,255,255,0.2); }
    .bg-danger-light { background: rgba(255,255,255,0.2); }

    .card-header {
        background: transparent;
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .table > :not(caption) > * > * {
        padding: 1rem;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ danh mục
        new Chart(document.getElementById('categoryChart'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(ViewBag.CategoryLabels)],
                datasets: [{
                    data: [@ViewBag.CategoryData],
                    backgroundColor: [
                        '#4e73df',
                        '#1cc88a',
                        '#36b9cc',
                        '#f6c23e',
                        '#e74a3b',
                        '#858796'
                    ]
                }]
            },
            options: {
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                },
                cutout: '70%'
            }
        });
    </script>
}
