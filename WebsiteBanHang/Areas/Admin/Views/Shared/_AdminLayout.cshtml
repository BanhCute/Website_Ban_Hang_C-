<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Banh Cute</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    
    <style>
        :root {
            --admin-primary: #4e73df;
            --admin-secondary: #858796;
        }

        /* Sidebar styles */
        #sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;
            background: #4e73df;
            background: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
            transition: all 0.3s;
        }

        #sidebar .sidebar-brand {
            padding: 1.5rem 1rem;
            color: white;
            font-size: 1.2rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        #sidebar ul.nav {
            padding: 1rem 0;
        }

        #sidebar .nav-item {
            padding: 0.5rem 1rem;
        }

        #sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.8rem 1rem;
            border-radius: 5px;
            transition: all 0.3s;
        }

        #sidebar .nav-link:hover {
            color: white;
            background: rgba(255,255,255,0.1);
        }

        #sidebar .nav-link.active {
            color: white;
            background: rgba(255,255,255,0.2);
        }

        /* Topbar styles */
        #topbar {
            background: white;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58,59,69,0.15);
        }

        .topbar-divider {
            width: 0;
            border-right: 1px solid #e3e6f0;
            height: 2rem;
            margin: auto 1rem;
        }

        /* Content area */
        #content {
            flex: 1;
            background: #f8f9fc;
        }

        /* Dropdown styles */
        .dropdown-menu {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58,59,69,0.15);
        }

        /* Card styles */
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58,59,69,0.15);
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-laugh-wink me-2"></i>
                <span>BANH CUTE ADMIN</span>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                       asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-fw fa-tachometer-alt me-2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Product" ? "active" : "")" 
                       asp-area="Admin" asp-controller="Product" asp-action="Index">
                        <i class="fas fa-fw fa-box me-2"></i>
                        <span>Sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")" 
                       asp-area="Admin" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-fw fa-list me-2"></i>
                        <span>Danh mục</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Order" ? "active" : "")" 
                       asp-area="Admin" asp-controller="Order" asp-action="Index">
                        <i class="fas fa-fw fa-shopping-cart me-2"></i>
                        <span>Đơn hàng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")" 
                       asp-area="Admin" asp-controller="User" asp-action="Index">
                        <i class="fas fa-fw fa-users me-2"></i>
                        <span>Người dùng</span>
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-fw fa-home me-2"></i>
                        <span>Về trang chủ</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Content area -->
        <div id="content" class="flex-grow-1">
            <!-- Topbar -->
            <nav id="topbar" class="navbar navbar-expand navbar-light px-4 py-3">
                <button class="btn btn-link d-md-none" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Topbar Search -->
                <form class="d-none d-sm-inline-block form-inline ms-auto">
                    <div class="input-group">
                        <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm...">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </form>

                <!-- Topbar Navbar -->
                <ul class="navbar-nav ms-3">
                    <div class="topbar-divider"></div>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="d-none d-lg-inline text-gray-600 small me-2">@User.Identity?.Name</span>
                            <i class="fas fa-user-circle fa-lg"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end shadow">
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                                Hồ sơ
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-cogs fa-sm fa-fw me-2 text-gray-400"></i>
                                Cài đặt
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>
                                Đăng xuất
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <div class="container-fluid px-4 py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('d-none');
        });

        // Show notifications
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false,
                position: 'top-end',
                toast: true
            });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            Swal.fire({
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                icon: 'error',
                timer: 3000,
                showConfirmButton: false,
                position: 'top-end',
                toast: true
            });
            </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>