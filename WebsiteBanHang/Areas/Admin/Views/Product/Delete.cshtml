@model WebsiteBanHang.Models.Product

<div class="container mt-4">
    <h2 class="text-danger">Are you sure you want to delete this?</h2>

    <div class="card my-3">
        <div class="card-body">
            <h4 class="card-title">Name: @Model.Name</h4>
            <p class="card-text"><strong>Price:</strong> @Model.Price</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-1"></i>Xóa
        </button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times me-1"></i>Hủy
        </a>
    </form>
</div>
