@using Microsoft.AspNetCore.Identity
@using WebsiteBanHang.Models
@using WebsiteBanHang.ViewComponents
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banh Cute</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #1e3799;
            --secondary-color: #4a69bd;
            --accent-color: #00d2d3;
            --light-bg: #f6f9fc;
        }
        
        /* Header Styles */
        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
            padding: 1rem 0;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .navbar-brand::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--accent-color);
            transition: width 0.3s ease;
        }

        .navbar-brand:hover::after {
            width: 100%;
        }

        .nav-link {
            position: relative;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        .nav-link i {
            transition: transform 0.3s ease;
        }

        .nav-link:hover i {
            transform: scale(1.2);
        }

        #cart-count-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 0.7rem;
            padding: 0.25em 0.6em;
            background: var(--accent-color);
            border: 2px solid white;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* Footer Styles */
        .footer {
            background: linear-gradient(135deg, #f8f9fa, #e6f3ff) !important;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--secondary-color));
        }

        .footer h5 {
            position: relative;
            display: inline-block;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        .footer h5::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 50px;
            height: 2px;
            background: var(--accent-color);
        }

        .footer-info-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

        .footer-info-item:hover {
            transform: translateX(10px);
        }

        .footer-info-item i {
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            margin-right: 10px;
            font-size: 0.9rem;
        }

        .footer ul li {
            margin-bottom: 0.8rem;
        }

        .footer ul li a {
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .footer ul li a:hover {
            color: var(--primary-color) !important;
            transform: translateX(10px);
        }

        .social-icon {
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: var(--primary-color);
            color: white !important;
            border-radius: 50%;
            margin: 0 10px;
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            background: var(--accent-color);
            transform: translateY(-5px) rotate(360deg);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.2rem;
            }
            
            .footer {
                text-align: center;
            }
            
            .footer h5::after {
                left: 50%;
                transform: translateX(-50%);
            }
            
            .footer-info-item {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shopping-cart me-2"></i>
                    <span class="fw-bold">Shop Lưu Niệm Banh Cute</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-list-ul me-1"></i>Sản phẩm
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i  class=" fas fa-solid fa-circle-info"></i>Giới thiệu
                            </a>
                        </li>
                      
                        <li class="nav-item">
                            <a href="/Cart" class="nav-link position-relative">
                            
                                <i class="fas fa-shopping-cart"></i>Giỏ hàng
                                <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill">
                                    <span id="cart-count">
                                        @await Html.PartialAsync("_CartCountPartial")
                                    </span>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold">
                        <i class="fas fa-shopping-cart me-2"></i>Shop Lưu Niệm Banh Cute
                    </h5>
                    <div class="footer-info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>123 Đường Lưu Niệm, TP.HCM</span>
                    </div>
                    <div class="footer-info-item">
                        <i class="fas fa-phone-alt"></i>
                        <span>0123.456.789</span>
                    </div>
                    <div class="footer-info-item">
                        <i class="fas fa-envelope"></i>
                        <span>contact@banhcute.com</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold">Thông tin hữu ích</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="fas fa-angle-right me-2"></i>Về chúng tôi
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="fas fa-angle-right me-2"></i>Chính sách đổi trả
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="fas fa-angle-right me-2"></i>Điều khoản dịch vụ
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="fas fa-angle-right me-2"></i>Hướng dẫn mua hàng
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold">Theo dõi chúng tôi</h5>
                    <div class="mb-4">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    </div>
                    <div class="newsletter">
                        <h5 class="fw-bold">Đăng ký nhận tin</h5>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Email của bạn">
                            <button class="btn btn-primary">Đăng ký</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <p class="mb-0">&copy; @DateTime.Now.Year - Banh Cute - Tất cả quyền được bảo lưu</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Thành công!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false,
                position: 'top-end',
                toast: true,
                background: '#4CAF50',
                color: '#fff'
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                title: 'Lỗi!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                icon: 'error',
                timer: 3000,
                showConfirmButton: false,
                position: 'top-end',
                toast: true,
                background: '#f44336',
                color: '#fff'
            });
        </script>
    }
    @section Scripts {
        <script>
            // Hàm cập nhật số lượng giỏ hàng
            function updateCartCount() {
                $.get('/Cart/GetCartCount', function(response) {
                    $('#cart-count').text(response);
                });
            }

            // Gọi hàm khi trang được tải
            $(document).ready(function() {
                updateCartCount();
            });

            // Thêm hàm toàn cục để các trang khác có thể gọi
            window.updateCartCountGlobal = function() {
                updateCartCount();
            };
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
