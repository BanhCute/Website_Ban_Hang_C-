@model IEnumerable<WebsiteBanHang.Models.Product>

@{
    Layout = "_Layout"; // Đảm bảo tên file layout đúng
}

<div class="container mt-4">
    <!-- Thanh tìm kiếm -->
    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Index" method="get" class="d-flex">
                <input 
                    type="search" 
                    name="searchString" 
                    class="form-control me-2" 
                    placeholder="Tìm kiếm sản phẩm..." 
                    value="@ViewBag.CurrentFilter"
                />
                <select name="category" class="form-select me-2" style="width: 200px;">
                    <option value="">Tất cả danh mục</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Thông báo kết quả tìm kiếm -->
    @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
    {
        <div class="alert alert-info text-center" role="alert">
            Kết quả tìm kiếm cho: <strong>@ViewBag.CurrentFilter</strong>
            @if (Model.Count() == 0)
            {
                <p class="mb-0">Không tìm thấy sản phẩm nào</p>
            }
            else
            {
                <p class="mb-0">Tìm thấy @Model.Count() sản phẩm</p>
            }
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Danh sách sản phẩm</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 product-card shadow-sm border-0">
                    <!-- Ảnh sản phẩm -->
                    <div class="product-image-container">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top product-image" alt="@item.Name">
                        }
                        else
                        {
                            <img src="/images/no-image.png" class="card-img-top product-image" alt="No Image">
                        }
                        <div class="product-overlay">
                            <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-light btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="btn btn-light btn-sm add-to-cart-btn" data-product-id="@item.Id">
                                <i class="fas fa-cart-plus"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Thông tin sản phẩm -->
                    <div class="card-body">
                        <h5 class="card-title product-title">@item.Name</h5>
                        <p class="card-text text-primary fw-bold mb-2">@item.Price.ToString("N0") VNĐ</p>
                        <p class="card-text description-text mb-2">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-tag me-1"></i>@item.Category?.Name
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <div class="mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-searchString="@ViewBag.CurrentFilter"
                           asp-route-category="@ViewBag.CurrentCategory">
                            Trước
                        </a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@i"
                           asp-route-searchString="@ViewBag.CurrentFilter"
                           asp-route-category="@ViewBag.CurrentCategory">
                            @i
                        </a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-searchString="@ViewBag.CurrentFilter"
                           asp-route-category="@ViewBag.CurrentCategory">
                            Sau
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        overflow: hidden;
        border-radius: 10px; /* Bo tròn góc */
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Tăng độ bóng khi hover */
    }

    .product-image-container {
        position: relative;
        overflow: hidden;
        height: 200px; /* Chiều cao cố định cho ảnh */
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Đảm bảo ảnh không bị méo */
        transition: transform 0.3s;
    }

    .product-card:hover .product-image {
        transform: scale(1.1); /* Phóng to ảnh khi hover */
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .product-card:hover .product-overlay {
        opacity: 1; /* Hiện overlay khi hover */
    }

    .product-overlay .btn {
        width: 35px;
        height: 35px;
        border-radius: 50%; /* Hình tròn cho nút */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        transition: transform 0.2s;
    }

    .product-overlay .btn:hover {
        transform: scale(1.1); /* Phóng to nút khi hover */
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.8rem;
    }

    .description-text {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.9rem;
        color: #6c757d;
        height: 4.2rem;
    }

    /* Animation cho các nút */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .product-overlay .btn {
        animation: fadeInUp 0.3s ease-out forwards;
    }

    .product-overlay .btn:nth-child(1) { animation-delay: 0.1s; }
    .product-overlay .btn:nth-child(2) { animation-delay: 0.2s; }

    /* Thêm responsive cho mobile */
    @@media (max-width: 768px) {
        .product-image-container {
            height: 150px; /* Chiều cao cho ảnh trên mobile */
        }

        .product-title {
            font-size: 1rem;
            height: 2.5rem;
        }

        .description-text {
            font-size: 0.8rem;
            height: 3.6rem;
        }
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart-btn').on('click', function() {
                var productId = $(this).data('product-id');
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { 
                        productId: productId, 
                        quantity: 1 
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#cart-count').text(response.cartCount);
                            Swal.fire({
                                title: 'Thành công!',
                                text: 'Đã thêm sản phẩm vào giỏ hàng',
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        } else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: response.message,
                                icon: 'error'
                            });
                        }
                    }
                });
            });
        });
    </script>
}
