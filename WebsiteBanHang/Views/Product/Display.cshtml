@model WebsiteBanHang.Models.Product

<style>
    .product-detail {
        padding: 40px 0;
    }

    .product-gallery {
        position: relative;
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .main-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
        cursor: pointer;
        transition: transform 0.3s;
    }

    .main-image:hover {
        transform: scale(1.02);
    }

    .thumbnail-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
    }

    .thumbnail {
        width: 100%;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .thumbnail:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .product-info {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .product-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .product-price {
        font-size: 1.8rem;
        color: #4e73df;
        font-weight: 700;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .product-category {
        display: inline-block;
        padding: 5px 15px;
        background: #e8f4ff;
        color: #4e73df;
        border-radius: 20px;
        font-size: 0.9rem;
        margin-bottom: 20px;
    }

    .product-stock {
        margin-bottom: 20px;
    }

    .product-stock i {
        margin-right: 5px;
    }

    .product-stock .text-success {
        color: #28a745;
    }

    .product-stock .text-danger {
        color: #dc3545;
    }

    .product-description {
        color: #6c757d;
        line-height: 1.8;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #eee;
    }

    .quantity-control {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
    }

    .quantity-input {
        width: 150px;
        text-align: center;
        font-size: 1.1rem;
        border: 2px solid #eee;
        border-radius: 8px;
        padding: 10px;
    }

    .quantity-btn {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        border: none;
        background: #f8f9fa;
        color: #4e73df;
        font-size: 1.2rem;
        transition: all 0.3s;
    }

    .quantity-btn:hover {
        background: #4e73df;
        color: white;
    }

    .add-to-cart-btn {
        width: 100%;
        padding: 15px;
        border-radius: 8px;
        border: none;
        background: #4e73df;
        color: white;
        font-size: 1.1rem;
        transition: all 0.3s;
    }

    .add-to-cart-btn:hover {
        background: #2e59d9;
        transform: translateY(-2px);
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 20px;
        border-radius: 8px;
        background: #f8f9fa;
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s;
    }

    .back-btn:hover {
        background: #e9ecef;
        color: #4e73df;
    }

    /* Modal styles */
    .modal-content {
        border: none;
        border-radius: 15px;
    }

    #modalImage {
        border-radius: 10px;
    }

    .btn-close {
        background-color: white;
        border-radius: 50%;
        padding: 10px;
    }

    .stock-status {
        display: inline-flex;
        align-items: center;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .in-stock {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .out-of-stock {
        background-color: #ffebee;
        color: #c62828;
    }

    .quantity-input:disabled,
    .quantity-btn:disabled,
    .add-to-cart-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<div class="container product-detail">
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="product-gallery">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="main-image"
                     onclick="showImageInModal(this.src)"
                     data-bs-toggle="modal" data-bs-target="#imageModal">
                
                @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                {
                    <div class="thumbnail-container">
                        <img src="@Model.ImageUrl" alt="Main Image" class="thumbnail"
                             onclick="showImageInModal(this.src)"
                             data-bs-toggle="modal" data-bs-target="#imageModal">
                        
                        @foreach (var image in Model.ImageUrls)
                        {
                            <img src="@image" alt="Additional Image" class="thumbnail"
                                 onclick="showImageInModal(this.src)"
                                 data-bs-toggle="modal" data-bs-target="#imageModal">
                        }
                    </div>
                }
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="product-info">
                <h1 class="product-title">@Model.Name</h1>
                <div class="product-price">
                    <span>@Model.Price.ToString("N0") VNĐ</span>
                </div>
                <div class="product-category">
                    <i class="fas fa-tag me-2"></i>@Model.Category?.Name
                </div>
                <div class="product-stock mb-3">
                    @if (Model.Quantity > 0)
                    {
                        <span class="stock-status in-stock">
                            <i class="fas fa-check-circle me-2"></i>Còn hàng (@Model.Quantity sản phẩm)
                        </span>
                    }
                    else
                    {
                        <span class="stock-status out-of-stock">
                            <i class="fas fa-times-circle me-2"></i>Hết hàng
                        </span>
                    }
                </div>
                <div class="product-description">
                    <h3>Chi tiết sản phẩm</h3>
                    @Model.Description
                </div>
                
                <div class="quantity-control">
                    <button class="quantity-btn" id="decreaseQuantity" @(Model.Quantity == 0 ? "disabled" : "")>
                        <i class="fas fa-minus"></i>
                    </button>
                    <input type="number" id="quantity" class="quantity-input" value="1" min="1" max="@Model.Quantity">
                    <button class="quantity-btn" id="increaseQuantity" @(Model.Quantity == 0 ? "disabled" : "")>
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                
                <button class="add-to-cart-btn" data-product-id="@Model.Id" @(Model.Quantity == 0 ? "disabled" : "")>
                    <i class="fas fa-cart-plus me-2"></i>
                    @(Model.Quantity > 0 ? "Thêm vào giỏ hàng" : "Hết hàng")
                </button>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            <span>Quay lại danh sách sản phẩm</span>
        </a>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-0">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" 
                        data-bs-dismiss="modal" aria-label="Close"></button>
                <img id="modalImage" src="" class="w-100" alt="Product Image">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const maxQuantity = @Model.Quantity;
            const $quantityInput = $('#quantity');
            const $decreaseBtn = $('#decreaseQuantity');
            const $increaseBtn = $('#increaseQuantity');

            function updateQuantityButtons() {
                const currentValue = parseInt($quantityInput.val());
                $decreaseBtn.prop('disabled', currentValue <= 1);
                $increaseBtn.prop('disabled', currentValue >= maxQuantity);
            }

            $quantityInput.on('change', function() {
                let value = parseInt($(this).val());
                
                if (isNaN(value) || value < 1) {
                    value = 1;
                } else if (value > maxQuantity) {
                    value = maxQuantity;
                    Swal.fire({
                        title: 'Thông báo',
                        text: 'Số lượng đã đạt mức tối đa của sản phẩm',
                        icon: 'warning',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                }
                
                $(this).val(value);
                updateQuantityButtons();
            });

            $decreaseBtn.click(function() {
                let currentValue = parseInt($quantityInput.val());
                if (currentValue > 1) {
                    $quantityInput.val(currentValue - 1).trigger('change');
                }
            });

            $increaseBtn.click(function() {
                let currentValue = parseInt($quantityInput.val());
                if (currentValue < maxQuantity) {
                    $quantityInput.val(currentValue + 1).trigger('change');
                }
            });

            $('.add-to-cart-btn').click(function() {
                const btn = $(this);
                const quantity = parseInt($quantityInput.val());
                
                if (quantity > maxQuantity) {
                    Swal.fire({
                        title: 'Lỗi',
                        text: 'Số lượng sản phẩm không đủ',
                        icon: 'error'
                    });
                    return;
                }

                btn.prop('disabled', true)
                   .html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...');

                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { 
                        productId: btn.data('product-id'), 
                        quantity: quantity 
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#cart-count').text(response.cartCount);
                            Swal.fire({
                                title: 'Thành công!',
                                text: 'Đã thêm sản phẩm vào giỏ hàng',
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false,
                                position: 'top-end',
                                toast: true
                            });
                        } else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: response.message,
                                icon: 'error'
                            });
                        }
                    },
                    complete: function() {
                        btn.prop('disabled', false)
                           .html('<i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ hàng');
                    }
                });
            });

            // Khởi tạo ban đầu
            updateQuantityButtons();
        });

        // Hàm hiển thị ảnh trong modal
        function showImageInModal(src) {
            document.getElementById('modalImage').src = src;
        }
    </script>
}
